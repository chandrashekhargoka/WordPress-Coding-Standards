<?xml version="1.0"?>
<ruleset name="TechInAsia">
	<description>Tech in Asia WordPress Coding Standards</description>
	<rule ref="WordPress-Core">
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
	</rule>
	<rule ref="WordPress-Docs"/>
	<rule ref="WordPress-Extra"/>
	<rule ref="WordPress.NamingConventions.ValidVariableName">
		<properties>
			<property name="customPropertiesWhitelist" type="array" value="hasChildNodes,childNodes,nodeValue,saveHTML,ownerDocument,searchInformation,cacheId,htmlTitle,htmlFormattedUrl,htmlSnippet,placesLived,aboutMe,iso2Code,capitalCity,permalinkUrl,resolvedPageUrl,pageUrl" />
		</properties>
	</rule>
</ruleset>