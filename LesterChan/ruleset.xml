<?xml version="1.0"?>
<ruleset name="LesterChan">
	<description>Lester Chan's WordPress Coding Standards</description>
	<rule ref="WordPress-Core">
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
		<exclude name="Squiz.PHP.CommentedOutCode.Found"/>
		<exclude name="PEAR.Functions.FunctionCallSignature.MultipleArguments"/>
	</rule>
	<rule ref="WordPress-Docs"/>
	<rule ref="WordPress-Extra"/>
	<rule ref="WordPress.NamingConventions.ValidVariableName">
		<properties>
			<property name="customPropertiesWhitelist" type="array" value="permalinkUrl,iso2Code,capitalCity,placesLived,aboutMe,searchInformation,cacheId,htmlTitle,htmlFormattedUrl,htmlSnippet,resolvedPageUrl,pageUrl,diffbotUri,ampUrls,ampUrl,cdnAmpUrl,originalUrl,nodeValue,childNodes,ownerDocument" />
		</properties>
	</rule>
</ruleset>